<form action="/restaurants" method="POST" style="width: 80%" class="form-block m-5">
  <div class="form-group pl-5 mt-3 mb-3">
    <label for="name">Name: </label>
    <input type="text" class="form-control ml-2" placeholder="Chinese name" name="name">
  </div>
  <div class="form-group pl-5 mt-3 mb-3">
    <label for="name_en">English Name: </label>
    <input type="text" class="form-control ml-2" placeholder="English name" name="name_en">
  </div>
  <div class="form-group pl-5 mt-3 mb-3">
    <label for="category">Category: </label>
    <input type="text" class="form-control ml-2" placeholder="Category" name="category">
  </div>
  <div class="form-group pl-5 mt-3 mb-3">
    <label for="image">Image URL: </label>
    <input type="text" class="form-control ml-2" placeholder="Image URL" name="image">
  </div>
  <div class=" form-group pl-5 mt-3 mb-3">
    <label for="location">Location: </label>
    <input type="text" class="form-control ml-2" placeholder="Address" name="location">
  </div>
  <div class="form-group pl-5 mt-3 mb-3">
    <label for="phone">Phone: </label>
    <input type="text" class="form-control ml-2" placeholder="Phone number" name="phone">
  </div>
  <div class="form-group pl-5 mt-3 mb-3">
    <label for="google_map">Google Map: </label>
    <input type="text" class="form-control ml-2" placeholder="Google Map URL" name="google_map">
  </div>
  <div class="form-group pl-5 mt-3 mb-3">
    <label for="rating">Rating: </label>
    <input type="number" min=0 max=5 step="0.1" class="form-control ml-2" placeholder="Rating" name="rating">
  </div>
  <div class="form-group pl-5 mt-3 mb-3">
    <label for="description">Description: </label>
    <input type="text" class="form-control ml-2" placeholder="Description" name="description">
  </div>
  <button type="submit" class="btn btn-primary float-right mt-2 mb-5">Create</button>
</form>